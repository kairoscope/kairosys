<div class="page-header" style="text-align: center; margin-top: 30px; padding-bottom: 5px;">
	 <h2>Sobre</h2>
</div>

<div style="margin-top: 15px; margin-bottom: 25px;">
<%= @site_page.content.html_safe %>
</div>

<% if @users != nil %>
	<div class="page-header" style="text-align: center; margin-top: 30px; padding-bottom: 5px;">
		 <h2 >Equipe</h2>
	</div>


	<% counter = 0 %>
	<ul class="thumbnails">
		<div class="row-fluid" style="margin-bottom: 10px;">
		<% @users.each do |user| %>
			<% if user.first_name && user.last_name && user.description && user.avatar %>
				<% if counter > 3 %>
					</div>
					<div class="row-fluid">
					<% counter = 0 %>
				<% end %>
				<li class="span3">
				    <div class="thumbnail">
						<%= image_tag(user.avatar) %>
	      
					  <div class="thumbnail-content">
				      	<h3><%= user.first_name %> <%= user.last_name %></h3>
						<p><%= user.member_title %></p>
				      	<p><%= user.description %></p>
					  </div>
				    </div>
				</li>
				<% counter = counter + 1 %>
			<% end %>
		<% end %>
	</ul>
<% end %>