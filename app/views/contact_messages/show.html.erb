<%- model_class = ContactMessage -%>
<div class="page-header">
  <h3 style="margin-bottom: 0px;">Mensagem de: <%= @contact_message.email %><small style="font-size 14px; margin-top: 15px;" class="pull-right"><%= time_ago_in_words(@contact_message.created_at)  %> ago</small></h3>
</div>


<p><%= @contact_message.message %></p>

<div class="centered last-item" style="margin-top: 25px;">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contact_messages_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contact_message_path(@contact_message),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
