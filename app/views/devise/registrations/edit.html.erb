<h2 style="margin-bottom: 25px;">Informações de <%= @user.first_name %> <%= @user.last_name %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

	<div class="row-fluid">
		<div class="form-group span4">
			<%= f.input :first_name, required: true, input_html:{class:'form-control span12'} %>
		</div>
	
		<div class="form-group span4">
			<%= f.input :last_name, required: true, input_html:{class:'form-control span12'} %>
		</div>
		<div class="form-group span4">
	    	<%= f.input :email, required: true, input_html:{class:'form-control span12'} %>
		</div>
		
	</div>

   
	
	
		<div class="row-fluid">
			<div class="form-group <% if f.object.team_member %>span8<% else %>span12<% end %>">
				<%= f.input :description, autodocus: true, input_html:{class:'form-control span12'} %>
			</div>
			<% if f.object.team_member %>
			<div class="form-group span4">
				<%= f.input :member_title, input_html:{class:'form-control span12'} %>
			</div>
			<% end %>
		</div>
	
	
	<div class="row-fluid">
		<div class="form-group span12">
			<%= f.input :avatar, label: "Link para imagem de profile (300x300 px)", input_html:{class:'form-control span12'} %>
		</div>
	</div>
	
	<div class="row-fluid">
			<div class="form-group span4">
				<%= f.input :password, autocomplete: "off", hint: "Deixe em branco se não quiser trocar", required: false, input_html:{class:'form-control span12'} %>
			</div>
			<div class="form-group span4">
    			<%= f.input :password_confirmation, required: false, input_html:{class:'form-control span12'} %>
			</div>
			<div class="form-group span4">
				<%= f.input :current_password, hint: "Necessário para mudar a senha", required: false, input_html:{class:'form-control span12'} %>
			</div>
		</div>
  
	<hr>
	<div class="row-fluid">
    	<div style="text-align: center;">
     	   <%= f.button :submit, "Salvar", class:'btn btn-success' %>
   		</div>
    </div>

<% end %>

<h4>Cancelar Conta</h4>

<p>Clique aqui para <%= link_to "cancelar a minha conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>.</p>
